    <script>
        // Variables para controlar la p√°gina actual
        let currentPage = 1;
        const totalPages = 72;
        
        // Elementos del DOM
        const pdfIframe = document.getElementById('pdf-iframe');
        const currentPageElement = document.getElementById('current-page');
        const pageInput = document.getElementById('page-input');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        
        // Inicializar controles
        document.addEventListener('DOMContentLoaded', function() {
            updateControls();
        });
        
        // Funci√≥n para cambiar de p√°gina
        function changePage(direction) {
            const newPage = currentPage + direction;
            
            if (newPage >= 1 && newPage <= totalPages) {
                currentPage = newPage;
                updatePDFViewer();
                updateControls();
            }
        }
        
        // Funci√≥n para actualizar el visor del PDF
        function updatePDFViewer() {
            pdfIframe.src = `MANUAL DEL CASER@ DIGITAL REDUCIDO (1).docx.pdf#page=${currentPage}`;
            currentPageElement.textContent = currentPage;
            pageInput.value = currentPage;
        }
        
        // Funci√≥n para actualizar los controles
        function updateControls() {
            // Actualizar estado de los botones
            prevBtn.disabled = currentPage <= 1;
            nextBtn.disabled = currentPage >= totalPages;
            
            // Actualizar campo de entrada
            pageInput.value = currentPage;
        }
        
        // Funci√≥n para ir a una p√°gina espec√≠fica
        pageInput.addEventListener('change', function() {
            let pageNum = parseInt(pageInput.value);
            
            if (isNaN(pageNum) || pageNum < 1) {
                pageNum = 1;
            } else if (pageNum > totalPages) {
                pageNum = totalPages;
            }
            
            currentPage = pageNum;
            updatePDFViewer();
            updateControls();
        });
        
        // Funci√≥n para descargar el PDF
        function downloadPDF() {
            const link = document.createElement('a');
            link.href = 'MANUAL DEL CASER@ DIGITAL REDUCIDO (1).docx.pdf';
            link.download = 'Manual_Caser_Digital.pdf';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        
        // Funci√≥n para abrir en nueva pesta√±a
        function openInNewTab() {
            window.open('MANUAL DEL CASER@ DIGITAL REDUCIDO (1).docx.pdf', '_blank');
        }
        
        // Funci√≥n para navegar a otras p√°ginas (simulada)
        function goToPage(url) {
            alert(`En una implementaci√≥n real, navegar√≠a a: ${url}`);
            // window.location.href = url;
        }
    </script>
