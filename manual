<body>
    <div class="manual-container">
        <!-- Controles en esquina superior izquierda -->
        <div class="corner-controls top-left">
            <div class="page-indicator">
                Página <span id="current-page">1</span> de <span id="total-pages">20</span>
            </div>
            <button class="control-btn" onclick="goToPage(0)">
                🏠 Inicio
            </button>
        </div>
        
        <!-- Controles en esquina superior derecha -->
        <div class="corner-controls top-right">
            <button class="control-btn" onclick="downloadManual()">
                📥 Descargar
            </button>
        </div>
        
        <main class="manual-viewer" id="manual-viewer">
            <div class="loading" id="loading">
                <div class="spinner"></div>
                <p>Cargando manual...</p>
            </div>
            
            <div class="page-container" id="page-container">
                <!-- Las páginas se cargarán aquí -->
                
                <!-- Navegación lateral izquierda - SOLO BOTÓN ATRÁS -->
                <div class="side-nav left">
                    <button class="side-nav-btn" id="side-prev-btn" onclick="changePage(-1)">
                        ←
                    </button>
                </div>
                
                <!-- Navegación lateral derecha - SOLO BOTÓN ADELANTE -->
                <div class="side-nav right">
                    <button class="side-nav-btn" id="side-next-btn" onclick="changePage(1)">
                        →
                    </button>
                </div>
            </div>
        </main>
    </div>

    <script>
        // Rutas CORREGIDAS - apuntando a images/manual/
        const manualPages = [
            'images/manual/pagina-01.webp',
            // La página 2 será el video superpuesto
            'images/manual/pagina-02.webp',
            'images/manual/pagina-03.webp',
            'images/manual/pagina-04.webp',
            'images/manual/pagina-05.webp',
            'images/manual/pagina-06.webp',
            'images/manual/pagina-07.webp',
            'images/manual/pagina-08.webp',
            'images/manual/pagina-09.webp',
            'images/manual/pagina-10.webp',
            'images/manual/pagina-11.webp',
            // La página 12 tendrá el botón de test
            'images/manual/pagina-12.webp',
            'images/manual/pagina-13.webp',
            'images/manual/pagina-14.webp',
            'images/manual/pagina-15.webp',
            'images/manual/pagina-16.webp',
            'images/manual/pagina-17.webp',
            // La página 18 tendrá el segundo video
            'images/manual/pagina-18.webp',
            'images/manual/pagina-19.webp',
            'images/manual/pagina-20.webp',
        ];
        
        // Estado
        let currentPage = 0;
        
        // Elementos DOM
        const manualViewer = document.getElementById('manual-viewer');
        const pageContainer = document.getElementById('page-container');
        const loadingElement = document.getElementById('loading');
        const currentPageElement = document.getElementById('current-page');
        const totalPagesElement = document.getElementById('total-pages');
        const sidePrevBtn = document.getElementById('side-prev-btn');
        const sideNextBtn = document.getElementById('side-next-btn');
        
        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            initManual();
        });
        
        function initManual() {
            totalPagesElement.textContent = manualPages.length;
            
            // Cargar primera página
            loadPage(currentPage);
            
            // Event listeners
            document.addEventListener('keydown', handleKeyNavigation);
            
            // Ocultar loading después de un tiempo
            setTimeout(() => {
                loadingElement.style.display = 'none';
            }, 1000);
        }
        
        function loadPage(pageIndex) {
            if (pageIndex >= 0 && pageIndex < manualPages.length) {
                // Mostrar loading
                loadingElement.style.display = 'block';
                
                // Limpiar contenedor
                const existingImage = pageContainer.querySelector('.webp-image');
                if (existingImage) {
                    existingImage.remove();
                }
                
                const existingVideo = pageContainer.querySelector('.video-overlay');
                if (existingVideo) {
                    existingVideo.remove();
                }
                
                const existingTestButton = pageContainer.querySelector('.test-button-overlay');
                if (existingTestButton) {
                    existingTestButton.remove();
                }
                
                const existingFallback = pageContainer.querySelector('.fallback-page');
                if (existingFallback) {
                    existingFallback.remove();
                }
                
                // Crear imagen para la página
                const img = document.createElement('img');
                img.className = 'webp-image';
                img.alt = `Página ${pageIndex + 1}`;
                
                img.onload = function() {
                    loadingElement.style.display = 'none';
                    
                    // Si es la página 2, agregar el video superpuesto centrado
                    if (pageIndex === 1) { // Página 2
                        createVideoOverlay('CDQdwK08pvM', 'video-center');
                    }
                    
                    // Si es la página 12, agregar el botón de test
                    if (pageIndex === 11) { // Página 12
                        createTestButton();
                    }
                    
                    // Si es la página 18, agregar el segundo video en la parte inferior
                    if (pageIndex === 17) { // Página 18
                        createVideoOverlay('M3M18slV-vI', 'video-bottom');
                    }
                };
                
                img.onerror = function() {
                    createFallbackPage(pageIndex);
                    loadingElement.style.display = 'none';
                };
                
                // Cargar la imagen WebP
                img.src = manualPages[pageIndex];
                pageContainer.appendChild(img);
                
                currentPage = pageIndex;
                updateControls();
            }
        }
        
        function createVideoOverlay(videoId, positionClass) {
            const videoDiv = document.createElement('div');
            videoDiv.className = `video-overlay ${positionClass}`;
            videoDiv.innerHTML = `
                <div class="video-container">
                    <div class="video-placeholder" id="videoPlaceholder-${videoId}">
                        <img src="https://img.youtube.com/vi/${videoId}/maxresdefault.jpg" alt="Video tutorial" class="video-thumbnail">
                        <div class="play-button"></div>
                    </div>
                    <iframe class="video-embed" id="videoEmbed-${videoId}" src="about:blank" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            `;
            pageContainer.appendChild(videoDiv);
            
            // Configurar el evento para el video
            const videoPlaceholder = document.getElementById(`videoPlaceholder-${videoId}`);
            const videoEmbed = document.getElementById(`videoEmbed-${videoId}`);
            
            if (videoPlaceholder && videoEmbed) {
                videoPlaceholder.addEventListener('click', function() {
                    // Cambiar el src del iframe para cargar el video
                    videoEmbed.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`;
                    
                    // Ocultar el placeholder y mostrar el iframe
                    videoPlaceholder.style.display = 'none';
                    videoEmbed.style.display = 'block';
                });
            }
        }
        
        function createTestButton() {
            const testButtonDiv = document.createElement('div');
            testButtonDiv.className = 'test-button-overlay';
            testButtonDiv.innerHTML = `
                <button class="test-button" onclick="startTest()">
                    Iniciar Test
                </button>
            `;
            pageContainer.appendChild(testButtonDiv);
        }
        
        function startTest() {
            // Aquí puedes redirigir a la página del test
            alert('🚀 Iniciando Test...\n\nEn una implementación completa, esto redirigiría a la página del test.');
            // window.location.href = 'test.html'; // Descomenta esta línea cuando tengas la página del test
        }
        
        function createFallbackPage(pageIndex) {
            const fallbackDiv = document.createElement('div');
            fallbackDiv.className = 'fallback-page';
            fallbackDiv.innerHTML = `
                <h2>Página ${pageIndex + 1}</h2>
                <p>Manual del Caser@ Digital</p>
            `;
            pageContainer.appendChild(fallbackDiv);
        }
        
        function changePage(direction) {
            const newPage = currentPage + direction;
            if (newPage >= 0 && newPage < manualPages.length) {
                loadPage(newPage);
            }
        }
        
        function updateControls() {
            currentPageElement.textContent = currentPage + 1;
            
            // Actualizar botones laterales
            if (sidePrevBtn) sidePrevBtn.disabled = currentPage <= 0;
            if (sideNextBtn) sideNextBtn.disabled = currentPage >= manualPages.length - 1;
        }
        
        function handleKeyNavigation(event) {
            if (event.key === 'ArrowLeft') {
                changePage(-1);
            } else if (event.key === 'ArrowRight') {
                changePage(1);
            } else if (event.key === 'Home') {
                goToPage(0);
            }
        }
        
        function goToPage(pageIndex) {
            loadPage(pageIndex);
        }
        
        function downloadManual() {
            alert('📥 Descargando manual...\n\nEn una implementación completa, se descargaría un archivo PDF o ZIP.');
        }
    </script>
</body>
</html>
